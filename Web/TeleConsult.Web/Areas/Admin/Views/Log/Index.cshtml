@using TeleConsult.Common
@using TeleConsult.Web.Areas.Admin.Models
@model LogModel

@{
    ViewBag.Title = SiteMap.CurrentNode.Title;
}

@section scripts {
    @Html.RenderScripts("~/Areas/Admin/Scripts/Log.js")
}

<div>
    <div class="row well">
        <div class="col-lg-4 col-md-6 col-sm-8 col-xs-12 form-group">
            <label for="searchDetails">Детайли</label>
            <input type="text" id="searchDetails" class="form-control" />
        </div>
        <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12 form-group">
            <label for="searchAction">Действие</label>
            @Html.DropDownList("searchAction", Model.Actions, GlobalConstants.Statuses.All, new { @class = "form-control" })
        </div>
        <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12 form-group">
            <label for="searchUser">Потребител</label>
            @Html.DropDownList("searchUser", Model.Users, GlobalConstants.Statuses.All, new { @class = "form-control" })
        </div>
        <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12 form-group">
            <label for="searchFrom">От</label>
            <div class="input-group date">
                <input type="text" class="form-control" id="searchFrom" />
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
        <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12 form-group">
            <label for="searchTo">До</label>
            <div class="input-group date">
                <input type="text" class="form-control" id="searchTo" />
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>

        <div class="col-lg-10 col-md-3 col-sm-8 col-xs-12 form-group">
            <button id="btnSearch" type="button" class="btn btn-primary">Търси</button>
        </div>
    </div>

    <div class="row">
        <div data-role="wrapper">
            <div data-role="toolbar" class="clearfix">
                <h4 data-role="title" class="pull-md-left">Хронология</h4>
            </div>
            <table id="logsGrid" data-source="@Url.Action("GetLogs")"></table>
        </div>
    </div>
</div>