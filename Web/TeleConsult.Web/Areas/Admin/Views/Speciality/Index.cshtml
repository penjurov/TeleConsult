@using TeleConsult.Common
@using TeleConsult.Web.Areas.Admin.Models
@model SpecialityModel

@{
    ViewBag.Title = SiteMap.CurrentNode.Title;
}

@section scripts {
    <script type="text/javascript" src="@Url.Content("~/Areas/Admin/Scripts/Speciality.js")"></script>
}

<div>
    <div class="row well">
        <div class="col-lg-4 col-md-6 col-sm-8 col-xs-12 form-group">
            <label for="searchName">Специалност </label>
            <input type="text" id="searchName" class="form-control" />
        </div>
        <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12 form-group">
            <label for="searchStatus">Статус</label>
            @Html.DropDownList("searchStatus", Model.Statuses, GlobalConstants.Statuses.All, new { @class = "form-control" })
        </div>
        <div class="col-lg-10 col-md-3 col-sm-8 col-xs-12 form-group">
            <button id="btnSearch" type="button" class="btn btn-primary">Търси</button>
        </div>
    </div>

    <div class="row">
        <div data-role="wrapper">
            <div data-role="toolbar" class="clearfix">
                <h4 data-role="title" class="pull-md-left">Специалности</h4>
                <div class="pull-md-left toolbar-btn-group">
                    <button id="btnAddSpeciality" type="button" class="btn btn-primary">Добави специалност</button>
                </div>
            </div>
            <table id="specialityGrid" data-source="@Url.Action("GetSpecialities")" data-url-delete="@Url.Action("Delete", "Speciality")" data-url-activate="@Url.Action("Activate", "Speciality")"></table>
        </div>
    </div>
</div>

<div id="specialityDialog" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Title</h4>
            </div>
            <div class="modal-body">
                <form class="modal-form" id="specialityForm">
                    <div class="contentTable dialog auto-overflow-dialog">
                        @Html.Hidden("Id")

                        @Html.EditorFor(m => m.ViewModel.Name)
                        <div class="modal-footer">
                            <button id="btnSaveSpeciality" type="button" class="btn btn-primary" data-url="@Url.Action("Save")">Запис</button>
                            <button id="btnCancel" type="button" class="btn btn-default">Отказ</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
